<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.ferret.controller.OpenWin">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="600.0" prefWidth="500.0" style="-fx-background-color: white;">
            <children>
            <Pane prefHeight="70.0" prefWidth="500.0" style="-fx-background-color: #ff7f50;" />
            <ImageView fx:id="loadFer" fitHeight="202.0" fitWidth="273.0" layoutX="112.0" layoutY="212.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="file:./src/loadFer.gif" />
               </image>
            </ImageView>
            <ImageView fx:id="ferret" fitHeight="304.0" fitWidth="303.0" layoutX="98.0" layoutY="114.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="file:./src/ferret.png" />
               </image>
            </ImageView>
                <Button fx:id="connect" layoutX="170.0" layoutY="509.0" mnemonicParsing="false" onAction="#initialize" style="-fx-background-color: #ff7f50;" text="Подключение к серверу">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
                </Button>
            <Label fx:id="stateCon" alignment="CENTER" contentDisplay="CENTER" layoutX="124.0" layoutY="448.0" prefHeight="17.0" prefWidth="253.0" textAlignment="CENTER" textFill="RED" />
            <TextField fx:id="SERVER_HOST" layoutX="170.0" layoutY="473.0" prefHeight="25.0" prefWidth="160.0" promptText="Введите IP-адрес сервера" />
            </children>
        </Pane>
    </children>
</GridPane>
